keywords = {Edge computing,Healthcare monitoring,Internet of Things,Named data networking,Security},
pages = {320--329},
publisher = {Elsevier B.V.},
title = {{Secure healthcare monitoring framework integrating NDN-based IoT with edge cloud}},
url = {https://doi.org/10.1016/j.future.2020.05.042},
volume = {112},
year = {2020}
