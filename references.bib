file = {:C$\backslash$:/Users/jncfa/Documents/MEGA/UC/6{\textordmasculine} Ano/Projeto WoW/Articles/Santos et al. - 2015 - A Sensor Fusion Layer to Cope with Reduced Visibility in SLAM.pdf:pdf},
issn = {15730409},
journal = {Journal of Intelligent and Robotic Systems: Theory and Applications},
keywords = {Reduced visibility,Robot Operating System (ROS),SLAM,Sensor fusion},
number = {3-4},
pages = {401--422},
title = {{A Sensor Fusion Layer to Cope with Reduced Visibility in SLAM}},
