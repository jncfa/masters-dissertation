file = {:C$\backslash$:/Users/jncfa/Documents/MEGA/UC/6{\textordmasculine} Ano/Projeto WoW/Articles/Walinjkar, Woods - 2017 - Personalized wearable systems for real-Time ECG classification and healthcare interoperability Real-Time ECG c.pdf:pdf},
isbn = {9781509048151},
journal = {2017 Internet Technologies and Applications, ITA 2017 - Proceedings of the 7th International Conference},
keywords = {Arrhythmia Neural-Net,Arrhythmia classification,Arrhythmia detection,ECG FHIR,ECG signal processing,GP Connect,HAPI FHIR,HL7,Healthcare monitoring,MITDB Physionet,SNOMED-CT FHIR,Wearable IoT},
pages = {9--14},
title = {{Personalized wearable systems for real-Time ECG classification and healthcare interoperability: Real-Time ECG classification and FHIR interoperability}},
